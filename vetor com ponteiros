#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int main() {
  int i, tam, *vet;

  printf("Qual o tamanho do vetor?: ");
  scanf("%d", &tam);
  srand(time (NULL));

  vet = malloc(tam * sizeof(int));

  if (vet){
      printf("Mem√≥ria alocada.\n");
    for (i = 0; i < tam; i++)
      *(vet + i) = rand() % 100;
    for (i = 0; i < tam; i++)
      printf("%d ", *(vet + i));
    printf("\n");

    printf("Digite o novo tamanho do vetor: ");
    scanf("%d", &tam);

    vet = realloc(vet, tam);

    printf("\nVetor realocado\n");
    for (i = 0; i < tam; i++)
      printf("%d ", *(vet + i));
    printf("\n");
    
  else {printf("Erro.\n");}    
  }
  
  free(): void free(void*vet);
  
  return 0;
}  
